<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:orientation="vertical" tools:padding="10pt">

    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/showNumbers" android:gravity="right" android:paddingTop="15pt"
            android:background="@color/grey" android:textSize="24sp"
            android:textColor="@color/white"
            android:layout_weight="1"/>
    <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TableRow
                android:layout_marginBottom="1pt"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <Button
                    android:layout_marginRight="1pt"
                    android:layout_weight="1"
                    android:text="AC"
                    android:layout_width="30pt"
                    android:layout_height="30pt" android:id="@+id/buClean" android:background="@color/wity"
                    android:textSize="18sp" android:onClick="buCleanEvent"/>
            <Button
                    android:layout_marginRight="1pt"
                    android:layout_weight="1"
                    android:text="+/-"
                    android:layout_width="30pt"
                    android:layout_height="30pt" android:id="@+id/buPlusMinus" android:background="@color/wity"
                    android:textSize="18sp" android:onClick="buNumbers"/>
            <Button
                    android:layout_marginRight="1pt"
                    android:layout_weight="1"
                    android:text="%"
                    android:layout_width="30pt"
                    android:layout_height="30pt" android:id="@+id/buPercent" android:background="@color/wity"
                    android:textSize="18sp" android:onClick="buPerEvent"/>
            <Button
                    android:layout_weight="1"
                    android:layout_width="30pt"
                    android:layout_height="30pt" android:id="@+id/buDiv" android:text="รท"
                    android:background="@color/orang" android:textColor="@color/white" android:textSize="18sp"
                    android:onClick="buOpEvent"/>
        </TableRow>
        <TableRow
                android:layout_marginBottom="1pt"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <Button
                    android:layout_marginRight="1pt"
                    android:layout_weight="1"
                    android:text="7"
                    android:layout_width="30pt"
                    android:layout_height="30pt" android:id="@+id/bu7" android:background="@color/wity"
                    android:textSize="18sp" android:onClick="buNumbers"/>
            <Button
                    android:layout_marginRight="1pt"
                    android:layout_weight="1"
                    android:text="8"
                    android:layout_width="30pt"
                    android:layout_height="30pt" android:id="@+id/bu8" android:background="@color/wity"
                    android:textSize="18sp" android:onClick="buNumbers"/>
            <Button
                    android:layout_marginRight="1pt"
                    android:layout_weight="1"
                    android:text="9"
                    android:layout_width="30pt"
                    android:layout_height="30pt" android:id="@+id/bu9" android:background="@color/wity"
                    android:textSize="18sp" android:onClick="buNumbers"/>
            <Button
                    android:layout_weight="1"
                    android:text="x"
                    android:layout_width="30pt"
                    android:layout_height="30pt" android:id="@+id/buMult" android:background="@color/orang"
                    android:textColor="@color/white" android:textSize="18sp" android:onClick="buOpEvent"/>
        </TableRow>
        <TableRow
                android:layout_marginBottom="1pt"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <Button
                    android:layout_marginRight="1pt"
                    android:layout_weight="1"
                    android:text="4"
                    android:layout_width="30pt"
                    android:layout_height="30pt" android:id="@+id/bu4" android:background="@color/wity"
                    android:textSize="18sp" android:onClick="buNumbers"/>
            <Button
                    android:layout_marginRight="1pt"
                    android:layout_weight="1"
                    android:text="5"
                    android:layout_width="30pt"
                    android:layout_height="30pt" android:id="@+id/bu5" android:background="@color/wity"
                    android:textSize="18sp" android:onClick="buNumbers"/>
            <Button
                    android:layout_marginRight="1pt"
                    android:layout_weight="1"
                    android:text="6"
                    android:layout_width="30pt"
                    android:layout_height="30pt" android:id="@+id/bu6" android:background="@color/wity"
                    android:textSize="18sp" android:onClick="buNumbers"/>
            <Button
                    android:layout_weight="1"
                    android:text="-"
                    android:layout_width="30pt"
                    android:layout_height="30pt" android:id="@+id/buMinus" android:background="@color/orang"
                    android:textColor="@color/white" android:textSize="18sp" android:onClick="buOpEvent"/>
        </TableRow>
        <TableRow
                android:layout_marginBottom="1pt"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <Button
                    android:layout_marginRight="1pt"
                    android:layout_weight="1"
                    android:text="1"
                    android:layout_width="30pt"
                    android:layout_height="30pt" android:id="@+id/bu1" android:background="@color/wity"
                    android:textSize="18sp" android:onClick="buNumbers"/>
            <Button
                    android:layout_marginRight="1pt"
                    android:layout_weight="1"
                    android:text="2"
                    android:layout_width="30pt"
                    android:layout_height="30pt" android:id="@+id/bu2" android:background="@color/wity"
                    android:textSize="18sp" android:onClick="buNumbers"/>
            <Button
                    android:layout_marginRight="1pt"
                    android:layout_weight="1"
                    android:text="3"
                    android:layout_width="30pt"
                    android:layout_height="30pt" android:id="@+id/bu3" android:background="@color/wity"
                    android:textSize="18sp" android:onClick="buNumbers"/>
            <Button
                    android:layout_weight="1"
                    android:text="+"
                    android:layout_width="30pt"
                    android:layout_height="30pt" android:id="@+id/buPlus" android:background="@color/orang"
                    android:textColor="@color/white" android:textSize="18sp" android:onClick="buOpEvent"/>
        </TableRow>
    </TableLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <Button
                android:layout_marginRight="1pt"

                android:text="0"
                android:layout_width="60pt"
                android:layout_height="30pt" android:id="@+id/bu0" android:layout_weight="1"
                android:background="@color/wity" android:textSize="18sp" android:onClick="buNumbers"/>
        <Button
                android:layout_marginRight="1pt"
                android:text="."
                android:layout_width="30pt"
                android:layout_height="30pt" android:id="@+id/buDot" android:layout_weight="0.5"
                android:background="@color/wity" android:textSize="18sp" android:onClick="buNumbers"/>
        <Button
                android:text="="
                android:layout_width="30pt"
                android:layout_height="30pt" android:id="@+id/buEqual" android:layout_weight="0.5"
                android:background="@color/orang" android:textColor="@color/white" android:textSize="18sp"
                android:onClick="buEqualEvent"/>
    </LinearLayout>
</LinearLayout>